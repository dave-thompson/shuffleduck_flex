  	    }
  	    
  	    private function showErrors(error_xml:XML):void
  	    {
  	    	// set up the error box
			currentState = "error";
			errorsVBox.removeAllChildren();
			var spacer1:Spacer = new Spacer();
			spacer1.height = 5;
			var spacer2:Spacer = new Spacer();
			spacer2.height = 5;
			errorsVBox.addChild(spacer1);
			
			var headerLabel:Label = new Label();
			  	headerLabel.text = "     Sorry, there were some problems:";
  	    		headerLabel.height = 20;
  	    		headerLabel.width = 910;
  	    		headerLabel.setStyle("fontSize", 12);
  	    		headerLabel.setStyle("color", "#FFFFFF");
  	    		headerLabel.setStyle("textAlign", "left");
  	    		errorsVBox.addChild(headerLabel);
			
			// add the errors
  	    	for each (var error:XML in error_xml.error)
  	    	{
  	    		var label:Label = new Label();
  	    		label.text = error.toString();
  	    		label.height = 20;
  	    		label.width = 910;
  	    		label.setStyle("fontSize", 12);
  	    		label.setStyle("color", "#EC0616");
  	    		label.setStyle("textAlign", "center");
  	    		errorsVBox.addChild(label);
  	    	}
			errorsVBox.addChild(spacer2);  	    	
  	    }
  	    

